@model LoginVM 
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All"></div>
		<form asp-action="Login" method="post">
			
			<br />
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="KeepMeIn" type="checkbox" class="checkbox" >
					<span>Keep Me Signin</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Signup Now!</a></p>
		<p> <a asp-action="ForgetPassword"> Forget Your Password ?</a></p>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

