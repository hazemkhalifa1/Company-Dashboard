@model IEnumerable<AppUserVM>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>


<form class="my-5" asp-action="Index">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search ..." name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>



@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Id)</th>
                <th>@Html.DisplayNameFor(x => x.FName)</th>
                <th>@Html.DisplayNameFor(x => x.LName)</th>
                <th>@Html.DisplayNameFor(x => x.Email)</th>
                <th>@Html.DisplayNameFor(x => x.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FName</td>
                    <td>@item.LName</td>
                    <td>@Html.DisplayFor(x => item.Email)</td>
                    <td>@string.Join(" ,",item.Roles)</td>
                    <partial name="_ButtonpartialView" model="@item.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No User Found !!</h3>
    </div>
}

