@model IEnumerable<DepartmentVM>
@{
    ViewData["Title"] = "Department";
}

<h1>AllDepartments</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create New Department</a>
<br />
<br />


@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x=>x.Code)</th>
                <th>@Html.DisplayNameFor(x=>x.Name)</th>
                <th>@Html.DisplayNameFor(x=>x.CreateAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <partial name="_ButtonpartialView" model="@item.Id.ToString()"></partial>

                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Department Found !!</h3>
    </div>
}

