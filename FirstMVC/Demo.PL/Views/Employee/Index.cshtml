@model IEnumerable<EmployeeVM>
@{
    ViewData["Title"] = "Employee";
}

<h1>AllEmployees</h1>
<a asp-action="Create" class="btn btn-primary my-3">Create New Employee</a>

<form class="my-5" asp-action="Index">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search ..." name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>



@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Image)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.Address)</th>
                <th>@Html.DisplayNameFor(x => x.Age)</th>
                <th>@Html.DisplayNameFor(x => x.Email)</th>
                <th>@Html.DisplayNameFor(x => x.Phone)</th>
                <th>@Html.DisplayNameFor(x => x.Salrey)</th>
                <th>@Html.DisplayNameFor(x => x.IsActive)</th>
                <th>@Html.DisplayNameFor(x => x.HireDate)</th>
                <th>@Html.DisplayNameFor(x => x.Department)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="~/Files/Images/@item.ImageName" width="75" height="75" class="rounded" alt="Employee's Image"/></td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Age</td>
                    <td>@Html.DisplayFor(x=> item.Email)</td>
                    <td>@Html.DisplayFor(x=> item.Phone)</td>
                    <td>@Html.DisplayFor(x=> item.Salrey)</td>
                    <td>

                    @if (item.IsActive)
                    {
                        <i class="fa-solid fa-circle" style="color:green"></i>   
                    }
                    else
                    {
                        <i class="fa-solid fa-circle" style="color:red"></i>
                    }
                    </td>
                    <td>@item.HireDate.Day/@item.HireDate.Month/@item.HireDate.Year</td>
                    <td>@item.Department?.Name</td>
                    <partial name="_ButtonpartialView" model="@item.Id.ToString()"></partial>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Employee Found !!</h3>
    </div>
}

